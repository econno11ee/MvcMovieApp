@model MvcMovie.Models.Movie

@{
	ViewBag.Title = "Edit";
}

<h2>Edit</h2>


<div ng-controller="MediaDetailCtrl" class="container">
	<h2>Add Movie</h2>
	<form novalidate class="simple-form">
		<div class="form-group">
			<label for="Title">Title</label>
			<input type="text" class="form-control" id="title" ng-model="movie.Title" ng-model-options="{ getterSetter: true }" required />
		</div>

		<div class="form-group">
			<label for="Director">Director</label>
			<input type="text" class="form-control" id="genre" ng-model="movie.Director" />
		</div>

		<div class="form" name="form-group">
			<label for="Release Date">Release Date</label>
			<input type="text" class="form-control" id="releaseDate" ng-model="movie.ReleaseDate" name="realeasedate" date />
			<span ng-show="form.releasedate.$error.date">Use yyyy-mm-dd for release date</span>
		</div>


		<div class="form-group">
			<label for="Genre">Genre</label>
			<input type="text" class="form-control" id="genre" ng-model="movie.Genre" />
		</div>

		<div class="form-group">
			<label for="Price">Price</label>
			<input type="text" class="form-control" id="price" ng-model="movie.Price" />
		</div>
		<div class="form-group">
			<label for="Rating">Rating</label>
			<input type="text" class="form-control" id="rating" ng-model="movie.Rating" />
		</div>


		<button type="submit" ng-click="update(movie)" class="btn btn-success">Submit</button>
	</form>
</div>

