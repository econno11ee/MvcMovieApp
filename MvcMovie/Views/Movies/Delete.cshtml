@model MvcMovie.Models.Movie

@{
	ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div ng-controller="MediaDetailCtrl">
	<h2>{{media.Title}}</h2>
	<div>
		<p><strong>Director:&nbsp;</strong>{{ media.Director }}</p>
	</div>
	<div>
		<p><strong>Release Date:&nbsp;</strong>{{ media.ReleaseDate | date: longdate }}</p>
	</div>
	<div>
		<p><strong>Genre:&nbsp;</strong>{{  media.Genre }}
	</div>
	<div>
		<p><strong>Price:&nbsp;</strong>{{  media.Price | currency}}
	</div>
	<div>
		<p><strong>Rating:&nbsp;</strong>{{ media.Rating}}
	</div>
	<p>
		<button type="submit" ng-click="delete('Movies', media.ID)" class="btn btn-success">Delete Movie</button>
		<button ng-model="button" go-click={{backToMoviesButton}} class="btn btn-default">Back to Movies</button>
	</p>

</div>


